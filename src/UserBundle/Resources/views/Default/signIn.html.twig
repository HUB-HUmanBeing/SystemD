
<div class="modal-body">
    {{ form_start(form, {'attr': {'class': 'form-horizontal', 'action' : path}}) }}
    {{ form_errors(form) }}
    <div class="panel-group" id="accordion-signin">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4 class="panel-title">
                    <a data-toggle="collapse" data-parent="#accordion-signin" href="#collapse-step1">
                        Etape 1 : Enregistrement
                    </a>
                </h4>
            </div>
            <div id="collapse-step1" class="panel-collapse collapse in">
                <div class="panel-body">
                    <div class="container-fluid">
                        {{ form_row(form.username) }}
                        {{ form_row(form.password) }}
                    </div>
                </div>
            </div>
        </div>
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4 class="panel-title">
                    <a data-toggle="collapse" data-parent="#accordion-signin" href="#collapse-step2">
                        Etape 2 : Renseignements
                    </a>
                </h4>
            </div>
            <div id="collapse-step2" class="panel-collapse collapse">
                <div class="panel-body">
                    <div class="container-fluid">
                        <p class="small">Ce message sera visible des autres utilisateurs d'HUmanBeing</p>
                        {{ form_widget(form.description , {attr : { "placeholder" : "Vous pouvez vous pr√©senter ici"}}) }}
                    </div>
                </div>
            </div>
        </div>
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4 class="panel-title">
                    <a data-toggle="collapse" data-parent="#accordion-signin" href="#collapse-step3">
                        Etape 3 : Localisation
                    </a>
                </h4>
            </div>
            <div id="collapse-step3" class="panel-collapse collapse">
                <div class="panel-body">
                    <div class="container-fluid">
                        {# todo faire en sorte que ca continue de marcher en https#}
                        <div class="row">
                            <div class="col-xs-8">
                                <input type="text" id="user_adress" class="form-control" placeholder="Entrez le nom de votre ville">
                            </div>
                            <button class="btn btn-default col-xs-4" id="search">rechercher ma ville</button>
                        </div>
                        <div id="user_mapid" class="map"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">Quitter</button>
    {{ form_widget(form.save, {'attr': {'class': 'btn btn-default'}}) }}

</div>
<div class="hide">
    {#todo gerer des clef de chiffrement au niveau du js de la page#}
    {{ form_widget(form.encryptedPrivateAsymKey, {attr : {"value" : "0"}}) }}

    {{ form_widget(form.publicAsymKey, {attr : {"value" : "0"}}) }}
    {{ form_rest(form) }}
</div>

{{ form_end(form) }}
